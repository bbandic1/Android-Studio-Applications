<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/topBorder"
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nazivItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Naziv biljke"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/slikaItem"
        android:scaleType="centerCrop"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nazivItem"
        tools:src="@drawable/biljka" />

    <TextView
        android:id="@+id/profilOkusaItem"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="20dp"
        android:text="Profil okusa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slikaItem" />

    <TextView
        android:id="@+id/jelo1Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="77dp"
        android:text="Jelo 1"
        app:layout_constraintStart_toStartOf="@+id/profilOkusaItem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/jelo2Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jelo 2"
        app:layout_constraintStart_toStartOf="@+id/jelo1Item"
        app:layout_constraintTop_toBottomOf="@+id/jelo1Item" />

    <TextView
        android:id="@+id/jelo3Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jelo 3"
        app:layout_constraintStart_toStartOf="@+id/jelo2Item"
        app:layout_constraintTop_toBottomOf="@+id/jelo2Item" />

    <View
        android:id="@+id/bottomBorder"
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="-20dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilOkusaItem" />

</androidx.constraintlayout.widget.ConstraintLayout>
